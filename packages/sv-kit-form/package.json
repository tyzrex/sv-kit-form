{
	"name": "sv-kit-form",
	"version": "0.0.1",
	"description": "A form library for SvelteKit with Svelte 5 runes",
	"type": "module",
	"scripts": {
		"dev": "svelte-package -w",
		"build": "svelte-package",
		"package": "svelte-package",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"prepublishOnly": "pnpm run package"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.2",
		"svelte": "^5.15.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"vite": "^6.0.3"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [
		"svelte",
		"sveltekit",
		"form",
		"validation",
		"svelte5",
		"runes"
	],
	"license": "MIT"
}
